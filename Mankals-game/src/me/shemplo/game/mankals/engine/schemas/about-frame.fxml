<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>

<BorderPane 
	styleClass="root_border_pane"
	xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox
			fx:id="window_menu_box"
			alignment="BASELINE_RIGHT">
				<children>
					<Button 
						fx:id="exit_button"
						styleClass="top_menu_button"
						text="✕">
						<HBox.margin>
							<Insets top="0" right="0" bottom="5" left="0" />
						</HBox.margin>
					</Button>
				</children>
		</HBox>
	</top>
	
	<center>
		<ScrollPane
			fx:id="about_scroll_pane"
			styleClass="list_scroll_pane">
			<content>
				<VBox
					fx:id="about_v_box">
					<children>
						<Label
							styleClass="custom_game_header"
							text="About game">
							<VBox.margin>
								<Insets top="10" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
						
						<Label
							fx:id="about_main_part"
							styleClass="about_plain_text"
							text="Classic board game with long history">
							<VBox.margin>
								<Insets top="10" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
						
						<Label
							styleClass="about_plain_text"
							text="---">
							<VBox.margin>
								<Insets top="10" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
						
						<HBox>
							<children>
								<Label
									styleClass="about_plain_text"
									text="PC version developed by ">
									<HBox.margin>
										<Insets top="10" right="0" bottom="5" left="10" />
									</HBox.margin>
								</Label>
								
								<Label
									fx:id="to_shemplo_link"
									styleClass="about_link_text"
									text="Shemplo">
									<HBox.margin>
										<Insets top="10" right="10" bottom="5" left="0" />
									</HBox.margin>
								</Label>
							</children>
						</HBox>
						
						<Label
							styleClass="about_plain_text"
							text="All rights reserved © 2017">
							<VBox.margin>
								<Insets top="0" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
						
						<Label
							styleClass="about_plain_text"
							text="---">
							<VBox.margin>
								<Insets top="10" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
						
						<Label
							styleClass="about_plain_text"
							text="Current version 1.1.0">
							<VBox.margin>
								<Insets top="0" right="10" bottom="5" left="10" />
							</VBox.margin>
						</Label>
					</children>
				</VBox>
			</content>
		</ScrollPane>
	</center>
	
	<bottom>
		<HBox
			fx:id="controll_menu_box"
			alignment="BASELINE_LEFT">
			<children>
				<Button
					fx:id="to_main_menu_button"
					styleClass="game_button"
					text="To main menu">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
				
				<Button
					fx:id="check_updates_button"
					styleClass="game_button"
					text="Check for updates"
					disable="true">
					<HBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
	</bottom>
</BorderPane>

